<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.codeferm</groupId>
    <artifactId>java-periphery</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    
    <name>Java Periphery</name>
    <description>JNI interface for c-periphery</description>    
    
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <hawtjni.version>1.19-SNAPSHOT</hawtjni.version>
    </properties>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                    <!-- Picocli annotation processor -->                    
                    <annotationProcessorPaths>
                        <path>
                            <groupId>info.picocli</groupId>
                            <artifactId>picocli-codegen</artifactId>
                            <version>4.5.2</version>
                        </path>
                    </annotationProcessorPaths>
                    <compilerArgs>
                        <arg>-Aproject=${project.groupId}/${project.artifactId}</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.0.0-M5</version>
                <configuration>
                    <trimStackTrace>false</trimStackTrace>
                </configuration>            
            </plugin>
            <!-- Download c-periphery source -->
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <version>1.6.0</version>
                <executions>
                    <execution>
                        <id>gpio.h</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/gpio.h</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>gpio.c</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/gpio.c</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>led.h</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/led.h</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>led.c</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/led.c</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>pwm.h</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/pwm.h</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>pwm.c</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/pwm.c</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>spi.h</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/spi.h</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>spi.c</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/spi.c</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>i2c.h</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/i2c.h</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>i2c.c</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/i2c.c</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>mmio.h</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/mmio.h</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>mmio.c</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/mmio.c</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>serial.h</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/serial.h</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>serial.c</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://raw.githubusercontent.com/vsergeev/c-periphery/master/src/serial.c</url>
                            <outputDirectory>${project.basedir}/src/main/native-package/src</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- Generate JNI code -->    
            <plugin>
                <groupId>org.fusesource.hawtjni</groupId>
                <artifactId>hawtjni-maven-plugin</artifactId>
                <version>${hawtjni.version}</version>
                <executions>
                    <execution>
                        <configuration>
                            <!-- Compile for GPIO device use -DPERIPHERY_GPIO_CDEV_SUPPORT and remove for sysfs only -->
                            <!-- BIAS settings: -DGPIOHANDLE_REQUEST_BIAS_PULL_UP -DGPIOHANDLE_REQUEST_BIAS_PULL_DOWN -DGPIOHANDLE_REQUEST_BIAS_DISABLE -->
                            <configureArgs>
                                <arg>CFLAGS=-DPERIPHERY_GPIO_CDEV_SUPPORT</arg>
                            </configureArgs>
                        </configuration>                        
                        <goals>
                            <goal>generate</goal>
                            <goal>build</goal>
                            <goal>package-jar</goal>
                            <goal>package-source</goal>
                        </goals>
                    </execution>
                </executions>        
            </plugin>
            <!-- Include all the dependencies in the jar so it can run standalone -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <excludes>
                                    <exclude>junit:junit</exclude>
                                </excludes>
                            </artifactSet>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/DEPENDENCIES</exclude>
                                        <exclude>META-INF/LICENSE*</exclude>
                                        <exclude>META-INF/NOTICE</exclude>
                                        <exclude>META-INF/MANIFEST.MF</exclude>
                                        <exclude>META-INF/versions/9/module-info.*</exclude>
                                    </excludes>
                                </filter>
                            </filters>              
                            
                        </configuration>
                    </execution>
                </executions>
            </plugin>                  
        </plugins>
    </build>
    
    <profiles>
        <!-- Profile which enables Universal binaries on OS X -->
        <profile>
            <id>mac</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.fusesource.hawtjni</groupId>
                        <artifactId>hawtjni-maven-plugin</artifactId>
                        <configuration>
                            <osgiPlatforms>
                                <osgiPlatform>osname=MacOS;processor=x86-64</osgiPlatform>
                                <osgiPlatform>osname=MacOS;processor=x86</osgiPlatform>
                                <osgiPlatform>*</osgiPlatform>
                            </osgiPlatforms>
                            <configureArgs>
                                <arg>--with-universal</arg>
                            </configureArgs>
                            <platform>osx</platform>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>    
    
    <dependencies>
        <!-- Compile -->
        <dependency>
            <groupId>info.picocli</groupId>
            <artifactId>picocli</artifactId>
            <version>4.5.2</version>
        </dependency>        
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
            <version>2.13.3</version>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>2.13.3</version>
        </dependency>
        <dependency>
            <groupId>org.fusesource.hawtjni</groupId>
            <artifactId>hawtjni-runtime</artifactId>
            <version>${hawtjni.version}</version>
        </dependency>             
        <!-- Test -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>5.7.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <version>5.7.0</version>
            <scope>test</scope>
        </dependency>
    </dependencies>    
</project>